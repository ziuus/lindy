{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lindy",
  "version": "0.1.1",
  "identifier": "com.dovndev.lindy",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "lindy",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "psmisc",
          "policykit-1",
          "libwebkit2gtk-4.1-0",
          "libappindicator3-1",
          "librsvg2-common"
        ]
      },
      "rpm": {
        "depends": [
          "psmisc",
          "polkit",
          "webkit2gtk4.1",
          "libappindicator-gtk3",
          "librsvg2"
        ]
      }
    }
  }
}